{
  "name": "url-shortener",
  "version": "0.0.1",
  "module": "src/index.ts",
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.10.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "docker compose up -d",
    "stop": "docker compose down",
    "restart": "docker compose restart",
    "logs": "docker compose logs -f",
    "logs:app": "docker compose logs -f app",
    "logs:postgres": "docker compose logs -f postgres",
    "launch:dev": "bun --hot src/index.ts",
    "launch": "bun run src/index.ts",
    "migration:generate": "bunx --bun kysely migrate make",
    "migration:up": "bunx --bun kysely migrate latest",
    "migration:down": "bunx --bun kysely migrate down",
    "codegen": "bunx kysely-codegen --dialect postgres --out-file src/db/types.d.ts",
    "wait-for-startup": "bash -c 'while [[ \"$(curl -s -o /dev/null -w ''%{http_code}'' localhost:3000/api/health-check)\" != \"200\" ]]; do sleep 1; done'",
    "seed:local": "bunx --bun kysely seed run local"
  },
  "type": "module",
  "dependencies": {
    "@elysiajs/swagger": "^1.2.0",
    "elysia": "^1.2.0",
    "kysely": "^0.27.5",
    "pg": "^8.13.1"
  }
}
